@model AuctionMV
@{

    //get viewbag products
    var products = ViewBag.Products as List<ProductMV>;
}

<div class="pagetitle">
    <h1>Create Auction</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item active">Create</li>
        </ol>
    </nav>
</div><!-- End Page Title -->

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Update Auction</h5>
                <!-- No Labels Form -->
                <form class="row g-3" method="post" asp-action="CreateAuction">
                    <div class="col-md-12">
                        <input type="text" name="AuctionName" class="form-control" placeholder="Name">
                    </div>
                    <div class="col-6">
                        <input type="datetime-local" name="AuctionStartDate" class=" form-control" placeholder="StartDate">
                    </div>
                    <div class="col-md-6">
                        <input type="datetime-local" name="AuctionEndDate" class="form-control" placeholder="EndDate">
                    </div>
                    <div class="col-md-4">
                        <select id="inputState" name="ProductId" class="form-select">
                            <option selected>Choose Product</option>
                            @if (products != null)
                            {
                                foreach (var product in products)
                                {
                                    <option value="@product.ProductId">@product.ProductName</option>
                                }
                            }
                            else
                            {
                                <option value=""></option>
                            }
                        </select>
                    </div>
                    <div class="col-md-4">
                        <input type="number" name="InitialValue" class="form-control" placeholder="Initial Value">
                    </div>
                    <div class="col-md-4">
                        <input type="number" name="BidValue" class="form-control" placeholder="Bid value">
                    </div>

                    <div class="col-md-6">
                        <input type="text" name="Address" class="form-control" placeholder="address">
                    </div>

                    <div class="col-md-6">
                        <input type="text" name="AuctionDescription" class="form-control" placeholder="Description">
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">Submit</button>
                        <a asp-action="CreatAuction" type="reset" class="btn btn-secondary">Reset</a>
                    </div>
                </form><!-- End No Labels Form -->
            </div>
        </div>
    </div>
</div>
